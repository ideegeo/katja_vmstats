% Dependencies
{deps, [
  {katja, "0.5", {git, "git://github.com/nifoc/katja", {tag, "v0.5"}}}
]}.

% erlc
{erl_opts, [
  warn_bif_clash,
  warn_deprecated_function,
  warn_export_all,
  warn_export_vars,
  warn_shadow_vars,
  warn_obsolete_guard,
  warn_unused_import,
  warn_unused_function,
  warn_unused_record,
  warn_unused_vars,
  warnings_as_errors
]}.

% EUnit
{eunit_opts, [verbose, {report, {eunit_surefire, [{dir, "."}]}}]}.

% Cover
{cover_enabled, true}.
{cover_print_enabled, true}.
{cover_export_enabled, true}.

% EDoc
{edoc_opts, [
  {def, [
    {version, "0.4"},
    {years, "2014"}
  ]}
]}.

% Xref
{xref_checks, [
  undefined_function_calls,
  undefined_functions,
  locals_not_used,
  deprecated_function_calls
]}.

% Cleanup
{clean_files, ["*.eunit", "ebin/*.beam", "test/*.beam"]}.
